<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="slack.listener.burritos" class="AppBundle\Listener\BurritoListener">
            <argument type="service" id="slack.client" />
            <tag name="kernel.event_listener" event="slack.command.received" method="handleMessageEvent" />
        </service>

        <service id="slack.listener.gif" class="AppBundle\Listener\GifShrinkingListener">
            <argument type="service" id="slack.client" />
            <argument type="service" id="logger" />
            <tag name="kernel.event_listener" event="slack.message.received" method="handleMessageEvent" />
        </service>

    </services>
</container>
